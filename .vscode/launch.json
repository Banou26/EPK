{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "nodemon",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
      "program": "${workspaceFolder}/lib/cli.js",
      "sourceMaps": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true,
      "args": [
        "./tests/unit/*.spec.*s"
      ],
      "runtimeArgs": [
        "--watch",
        "lib",
        "--watch",
        "tests"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "bruh",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
      "program_": "${workspaceFolder}/src/cli/index.ts",
      "program": "${workspaceFolder}/bin/cli.js",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true,
      "args": [
        "./tests/unit/*.spec.*s"
      ],
      "remoteRoot": "${workspaceRoot}/dist",
      "__": "--experimental-modules",
      "runtimeArgs": [
        "--watch",
        "lib",
        "--watch",
        "tests"
      ]
    }
  ]
}