{
  "name": "epk",
  "version": "0.4.0",
  "type": "module",
  "license": "MIT",
  "dependencies": {
    "esbuild": "^0.14.22",
    "playwright": "^0.11.1",
    "rxjs": "^6.6.7"
  },
  "devDependencies": {
    "@types/node": "^17.0.18",
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "build-watch": "node ./build.js -w",
    "build": "node ./build.js",
    "test-watch": "nodemon -e * --watch \"./build/**/*\" --exec \"npm run test\"",
    "test": "node build/cli.js ./tests/unit/*.ts",
    "watch": "concurrently \"npm run build-watch\" \"npm run test-watch\"",
    "dev": "npm run watch"
  }
}
