{
  "name": "epk",
  "version": "0.2.1",
  "description": "JS testing tool for a world without problems",
  "main": "dist/index.js",
  "browser": "dist/test.js",
  "repository": "https://github.com/FKN48/EPK",
  "author": "Banou",
  "license": "MIT",
  "bin": {
    "epk": "bin/cli.js"
  },
  "scripts": {
    "_buildBrowser": "parcel src/index.ts --no-source-maps --out-dir dist-browser --public-url ./",
    "buildNode": "parcel build src/index.ts --no-source-maps --target node --public-url ./",
    "buildTest": "parcel build src/test/index.ts --no-source-maps --out-file test.js --public-url ./",
    "buildEmptyPage": "parcel build src/environment/empty.html --out-file empty.html --public-url ./",
    "clearDist": "rimraf ./dist",
    "build": "yarn run clearDist && yarn run buildTest && yarn run buildNode && yarn run buildEmptyPage",
    "watchNode": "parcel watch src/index.ts --target node --public-url ./",
    "watchTest": "parcel watch src/test/index.ts --no-source-maps --out-file test.js --no-hmr --public-url ./",
    "watchEmptyPage": "parcel watch src/environment/empty.html --out-file empty.html --public-url ./",
    "dev": "concurrently \"yarn run watchNode\" \"yarn run watchTest\" \"yarn run watchEmptyPage\"",
    "test": "node bin/cli.js ./tests/unit/*.spec.*s"
  },
  "dependencies": {
    "@babel/preset-typescript": "^7.1.0",
    "babel-plugin-espower": "^3.0.0",
    "babylon-walk": "^1.0.2",
    "chalk": "^2.4.1",
    "fast-glob": "^2.2.4",
    "flatted": "^2.0.0",
    "koa": "^2.6.2",
    "koa-mount": "^4.0.0",
    "koa-static": "^5.0.0",
    "ora": "^3.0.0",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-babel-typescript": "^1.0.0",
    "perf_hooks": "^0.0.1",
    "power-assert": "^1.6.1",
    "rxjs": "6",
    "stacktrace-parser": "^0.1.4",
    "strip-ansi": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-proposal-pipeline-operator": "^7.2.0",
    "@types/puppeteer": "^1.11.1",
    "@typescript-eslint/parser": "^1.6.0",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.10",
    "puppeteer": "^1.13.0",
    "puppeteer-firefox": "^0.5.0",
    "rimraf": "^2.6.3",
    "standard": "^12.0.1",
    "typescript": "^3.4.1"
  },
  "engines": {
    "node": ">= 11.0.0"
  },
  "browserslist": [
    "last 1 Chrome versions"
  ]
}
